<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/addr1"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:background="#ffffff"/>

    <TextView
        android:id="@+id/addr2"
        android:layout_width="0dp"
        android:layout_height="43dp"
        app:layout_constraintTop_toBottomOf="@id/addr1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:background="#ffffff"/>

    <TextView
        android:id="@+id/latitude1"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/addr2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/latitude2"
        android:text="纬度"
        android:background="#ffffff"/>


    <TextView
        android:id="@+id/latitude2"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/addr2"
        app:layout_constraintLeft_toRightOf="@id/latitude1"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:background="#ffffff"/>

    <TextView
        android:id="@+id/longtitude1"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/latitude1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/longtitude2"
        android:gravity="center"
        android:text="经度"
        android:background="#ffffff"/>

    <TextView
        android:id="@+id/longtitude2"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/latitude1"
        app:layout_constraintLeft_toRightOf="@id/longtitude1"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:background="#ffffff"/>

</androidx.constraintlayout.widget.ConstraintLayout>
