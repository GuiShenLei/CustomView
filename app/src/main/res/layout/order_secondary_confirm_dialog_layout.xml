<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/size_292dp"
    android:layout_height="wrap_content"
    android:background="@drawable/round_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="确认支付"
        android:textSize="19dp"
        android:textColor="#352d2b"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_order_confirm_sendory_dialog_pay_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="30dp"
        android:text="支付金额"
        android:textColor="#352d2b"
        android:textSize="15dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f3f3f3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <Button
            android:id="@+id/btn_order_confirm_sendory_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/alert_dialog_leftbottom_bg"
            android:text="取消"
            android:textColor="#868180"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btn_order_confirm_sendory_dialog_confirm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/alert_dialog_rightbottom_bg"
            android:text="确认"
            android:textColor="#BFAB8E"
            android:textSize="16dp" />

    </LinearLayout>

</LinearLayout>