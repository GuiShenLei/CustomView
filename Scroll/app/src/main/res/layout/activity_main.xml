<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_edit_pbook_poster_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/sv_edit_pbook_poster_scroll_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="331dp"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/iv_edit_pbook_poster_cover_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />

                <ImageView
                    android:id="@+id/iv_edit_pbook_poster_book_cover"
                    android:layout_width="192dp"
                    android:layout_height="250dp"
                    android:layout_centerInParent="true"
                    android:scaleType="fitXY" />

                <Button
                    android:id="@+id/btn_share_pbook_poster_take_photo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true" />

            </RelativeLayout>

            <ImageView
                android:layout_width="13dp"
                android:layout_height="12dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="19dp"
                />

            <EditText
                android:id="@+id/et_edit_pbook_poster_custom_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:inputType="text"
                android:imeOptions="actionNext" />

            <TextView
                android:id="@+id/tv_edit_pbook_poster_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="100dp"
                tools:text="啊吱"
                />



        </LinearLayout>
    </ScrollView>




</LinearLayout>